<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#101010"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/scan_title"
        android:text="Network Camera Scan"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>

    <TextView
        android:id="@+id/scan_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Initializing..."
        android:textColor="#00FF99"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <ProgressBar
        android:id="@+id/scan_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:progressTint="#00FF99"
        android:indeterminate="false"
        android:max="255"
        android:layout_marginBottom="12dp"/>

    <!-- âœ… Fixed: unique ID for the ScrollView -->
    <ScrollView
        android:id="@+id/log_scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#181818"
        android:padding="8dp"
        android:overScrollMode="never">

        <TextView
            android:id="@+id/log_output"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logs will appear here..."
            android:textColor="#DDDDDD"
            android:textSize="14sp"
            android:lineSpacingExtra="4dp" />
    </ScrollView>

    <Button
        android:id="@+id/btn_stop_scan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ›‘ Stop Scan"
        android:textSize="16sp"
        android:backgroundTint="#FF4444"
        android:textColor="#FFFFFF"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/btn_return_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="â¬… Back to Dashboard"
        android:textSize="16sp"
        android:backgroundTint="#333333"
        android:textColor="#FFFFFF"
        android:layout_marginTop="8dp"/>
</LinearLayout>
